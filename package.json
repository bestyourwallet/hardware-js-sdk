{
  "name": "@ukeyfe/hardware-js-sdk",
  "description": "hardware js-sdk",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bestyourwallet/hardware-js-sdk.git"
  },
  "author": "UKey",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/connect-examples/shared-constants",
      "packages/connect-examples/expo-example",
      "packages/connect-examples/electron-example",
      "packages/connect-examples/expo-playground"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/@electron",
      "**/@electron/**"
    ]
  },
  "scripts": {
    "bootstrap": "npx patch-package && lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "clean-workspace": "yarn clean && lerna run clean",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "test": "lerna run test",
    "setup": "yarn && yarn bootstrap && yarn build",
    "check-versions": "node scripts/check-versions.js",
    "publish-packages": "yarn check-versions && lerna publish from-package",
    "update-protobuf": "lerna run update:protobuf --scope=@ukeyfe/hd-transport",
    "update-version": "lerna version --no-git-tag-version --force-publish=@ukeyfe/hd-core,@ukeyfe/hd-ble-sdk,@ukeyfe/hd-common-connect-sdk,@ukeyfe/hd-transport-electron,@ukeyfe/hd-transport-emulator,@ukeyfe/hd-transport-http,@ukeyfe/hd-transport-lowlevel,@ukeyfe/hd-transport-react-native,@ukeyfe/hd-transport-web-device,@ukeyfe/hd-transport,@ukeyfe/hd-web-sdk,@ukeyfe/hd-shared",
    "example": "cd ./packages/connect-examples/expo-example && yarn start",
    "example:web": "cd ./packages/connect-examples/expo-example && cross-env CONNECT_SRC=https://localhost:8087 yarn start",
    "example:desktop": "cd ./packages/connect-examples/electron-example && yarn dev",
    "build:example:desktop:mac": "cd ./packages/connect-examples/electron-example && yarn make:mac",
    "build:example:desktop:win": "cd ./packages/connect-examples/electron-example && yarn make:win",
    "example:playground": "cd ./packages/connect-examples/expo-playground && yarn start",
    "dev:all": "lerna run dev --parallel --ignore expo-example --ignore hardware-example --ignore ukey-hardware-playground",
    "dev:web": "cd ./packages/hd-web-sdk && yarn dev",
    "dev:ble": "cd ./packages/hd-ble-sdk && yarn dev",
    "dev:common": "cd ./packages/hd-common-connect-sdk && yarn dev",
    "dev:core": "cd ./packages/core && yarn dev",
    "dev:transport": "cd ./packages/hd-transport && yarn dev",
    "dev:transport-http": "cd ./packages/hd-transport-http && yarn dev",
    "dev:transport-rn": "cd ./packages/hd-transport-react-native && yarn dev",
    "dev:transport-lowlevel": "cd ./packages/hd-transport-lowlevel && yarn dev",
    "dev:transport-emulator": "cd ./packages/hd-transport-emulator && yarn dev",
    "dev:transport-web-device": "cd ./packages/hd-transport-web-device && yarn dev",
    "dev:transport-electron": "cd ./packages/hd-transport-electron && yarn dev",
    "dev:shared": "cd ./packages/shared && yarn dev",
    "debug:watcher": "node ./scripts/monitor.js"
  },
  "resolutions": {
    "pbkdf2": "3.1.3",
    "es-iterator-helpers": "1.0.15",
    "wrap-ansi": "7.0.0",
    "**/node-gyp": "10.0.1",
    "cross-spawn": "7.0.5",
    "brace-expansion": "^2.0.2",
    "parse-url": "8.1.0",
    "braces": "3.0.3",
    "tmp": "0.2.4",
    "micromatch": "4.0.8",
    "sha.js": "2.4.12",
    "cipher-base": "1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/bchaddrjs": "^0.4.3",
    "@types/jest": "^27.5.1",
    "@types/node": "^18.18.8",
    "@types/shelljs": "^0.8.11",
    "electron-builder": "^24.9.1",
    "babel-jest": "^28.1.3",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-config-wesbos": "3.2.3",
    "eslint-plugin-jest": "^26.6.0",
    "husky": "9.1.6",
    "jest": "^28.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "15.2.10",
    "prettier": "^2.7.1",
    "prettier-eslint": "^14.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.73.0",
    "rollup-plugin-dts": "^4.2.1",
    "shelljs": "0.8.5",
    "tsconfig-paths": "^4.0.0",
    "typescript": "5.1.6"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "version": "0.0.0"
}
